	.ui-toolbar .ui-toolbar-group-left .ve-botaoSalvarCadastroCliente, 
	.ui-toolbar .ui-toolbar-group-right .ve-botaoPesquisarCadastroCliente
	{
		font-size: 0.8em;
	}
	
	.ui-toolbar .ui-toolbar-group-left .ve-botaoNovoCadastroUsuario, 
	.ui-toolbar .ui-toolbar-group-left .ve-botaoSalvarCadastroUsuario, 
	.ui-toolbar .ui-toolbar-group-right .ve-botaoPesquisarCadastroUsuario
	{
		font-size: 0.8em;
	}
}

