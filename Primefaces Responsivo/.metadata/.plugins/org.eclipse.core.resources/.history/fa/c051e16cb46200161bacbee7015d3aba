@charset "utf-8";

/*########Quando a tela ficar abaixo de 640px vai ser retirada a borda do panelGrid##########*/
@media(max-width: 640px)
{
	.ui-panelgrid.ve-panelGridCadastroProduto .ui-grid-responsive .ui-grid-row
	{
		border: none;
	}
	
	.ui-panelgrid.ve-panelGridCadastroCliente .ui-grid-responsive .ui-grid-row
	{
		border: none;
	}
	
	.ui-panelgrid.ve-panelGridCadastroUsuario .ui-grid-responsive .ui-grid-row
	{
		border: none;
	}
}

/*########Modelo para mudar o estilo do outputText##########*/
.ui-panelgrid .ui-panelgrid-content .ui-grid-row .tito
{
	
	font: italic small-caps bold 14px "Comic Sans MS", sans-serif;
	
	color:red;
}

/*#########quando a tela ficar abaixo de 640px ir√° diminuir os components do toolbar##########*/
